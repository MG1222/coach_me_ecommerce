        <div class="card col-md-3 my-2 mx-4 ">
  	       <%= image_tag item.image_url, alt: "image produit", class:"d-block w-100" %>
           <div class="card-body">
             <h5 class="card-title"><a href="<%= item_path(item.id) %>"> <%= item.title %> </a></h5>
             <h6> <%= item.price %> â‚¬ </h6>
             <p class="card-text"><%= item.description %></p>
