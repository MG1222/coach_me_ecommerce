       <%= image_tag item.image_url, alt: "image produit", class:"d-block w-100" %>
       <div class="card-body">
         <h5 class="card-title"><%= item.title %> </h5>
         <h6> <%= item.price %> â‚¬ </h6>
         <p class="card-text"><%= item.description %></p>
         <a href="<%= item_path(item.id) %>" class="btn btn-primary">Voir le produit</a>
       </div>
     </div>
	<% end %>

</div>

